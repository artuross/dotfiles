{
  // globally installed context servers
  "context_servers": {
    "context7": {
      "source": "custom",
      "command": "context7-mcp",
      "args": []
    },
    "tree_sitter": {
      "source": "custom",
      "command": "mcp-server-tree-sitter",
      "args": [],
      "enabled": false
    }
  },

  // LLM support / panel
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true
  },

  // disable panels
  "collaboration_panel": {
    "button": false
  },

  // disable telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // configure must have extensions
  "auto_install_extensions": {
    // extensions
    "dockerfile": true,
    "golangci-lint": true,
    "html": true,
    "ini": true,
    "just": true,
    "lua": true,
    "nu": true,
    "svelte": true,
    "terraform": true,
    "toml": true,

    // themes
    "rose-pine-theme": true,
    "symbols": true
  },

  // font settings
  "agent_font_size": 15,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 15,
  "buffer_font_weight": 300,
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_size": 15,

  // don't blink cursor in the editor
  "cursor_blink": false,

  // use relative line numbers in the editor
  "relative_line_numbers": true,

  // show hover hints instanly
  "hover_popover_delay": 0,

  // restore only lastly closed workspace on restart
  "restore_on_startup": "last_workspace",

  // terminal settings
  "terminal": {
    // cursor settings
    "cursor_shape": "bar",
    "blinking": "terminal_controlled",

    // font settings
    "font_size": 13,
    "font_family": "FiraCode Nerd Font",
    "font_weight": 300,

    // max scroll buffer
    "max_scroll_history_lines": 100000,

    // use nushell
    "shell": {
      "program": "nu"
    },

    // don't show breadcrumbs
    "toolbar": {
      "breadcrumbs": false
    }
  },

  // theme settings
  "icon_theme": "Symbols Icon Theme",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ros√© Pine Moon"
  },

  // automatically adjusts search case sensitivity if the query
  // contains uppercase letters, case insensitive otherwise
  "use_smartcase_search": true,

  "features": {
    // use CoPilot for inline suggestions
    "edit_prediction_provider": "copilot"
  }
}
